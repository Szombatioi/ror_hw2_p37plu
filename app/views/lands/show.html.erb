<h1 class="text-center">Felvételek: <%= @land.name %></h1>
<% if @land.records.any? %>
    <div class="container">
    <div class="row my-4">
        <% @land.records.each_with_index do |record, index| %>
        <div class="col-md-4">
            <%= render partial: "lands/record", locals: { record: record } %>
        </div>
        <% if (index + 1) % 3 == 0 %>
            </div><div class="row">
        <% end %>
        <% end %>
    </div>
</div>
<% else %>
      <p class="text-center">Még nincs elmentve felvétel...</p>
<% end %>

<% if user_signed_in? %>
    <div class="text-center my-4">
        <%= button_to "Felvétel", new_land_record_path(land_id: @land.id), method: 'get', class: "btn btn-primary" %>
    </div>
<% end %>