<div class="border border-dark p-2">
    <h3 class="m-0">
        <%= link_to record.title, record_path(name: @land.name, id: record.id), style: "color: black;" %>
    </h3>
    
    <% if record.lyrics %>
        <p class="m-0"><%= simple_format(record.lyrics) %></p>
    <% else %>
        <p>Még nincs dalszöveg...</p>
    <% end %>
</div>