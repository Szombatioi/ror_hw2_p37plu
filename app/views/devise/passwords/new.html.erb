<div class="border border-dark text-center" style="width: 50%; margin: 0 auto; padding: 10px;">

<h2>Elfelejtett jelszó?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="field mb-2">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control w-50", style: "margin-left: 25%;" %>
  </div>

  <div class="actions">
    <%= f.submit "Jelszó visszaállítása", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= render "devise/shared/error_messages", resource: resource %>
</div>