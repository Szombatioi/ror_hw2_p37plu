<h1 class="text-center">Népzenei gyűjtemény</h1>
<% if @lands.any? %>
    <div class="container my-4">
      <div class="row my-4">
        <% @lands.each_with_index do |land, index| %>
          <div class="col-md-4">
            <%= render partial: "index/land", locals: { land: land } %>
          </div>
          <% if (index + 1) % 3 == 0 %>
            </div><div class="row">
          <% end %>
        <% end %>
      </div>
    </div>
<% else %>
  <p class="text-center">Még nincs elmentve tájegység...</p>
<% end %>

<% if user_signed_in? %>
  <div class="text-center">
    <%= button_to "Felvétel", new_land_path, class: "btn btn-primary" %>
  </div>
<% end %>